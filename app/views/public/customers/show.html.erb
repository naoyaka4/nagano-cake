<h4>マイページ</h4>

<div class="col-5 ml-3">
  <table class="table table-borderless">
    <tr>
      <td><strong>登録情報</strong></td>
      <td><%= link_to '編集する', customer_information_edit_path(@customer), class: "btn btn-sm btn-success" %></td>
    </tr>
  </table>
</div>

<div class="col-5 ml-3">
  <table class="table table-bordered">
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.kana_last_name %> <%= @customer.kana_first_name %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.post_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>

<div class="col-5 ml-3">
  <table class="table table-borderless">
    <tr>
      <td><strong>配送先</strong></td>
      <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %></td>
    </tr>
  </table>
</div>

<div class="col-5 ml-3">
  <table class="table table-borderless">
    <tr>
      <td><strong>注文履歴</strong></td>
      <td><%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %></td>
    </tr>
  </table>
</div>
