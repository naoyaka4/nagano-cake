<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <h3><strong>商品一覧</strong></h3>

      <% @products.each do |product| %>
      <div class="d-flex flex-wrap">
        <div>
          <%= image_tag 'no_image', size: "150x150" %>
          <p><strong><%= link_to product.name, product_path(product) %></strong></p>
          <p><strong><%= product.non_taced_price %></strong></p>
        </div>
      </div>
      <% end %>
      <%= paginate @products %>
    </div>
  </div>
</div>
