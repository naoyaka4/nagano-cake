<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table table-hover">
        <thead>
          <tr align="center">
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="d-flex flex-wrap">
        <h3><strong>商品一覧</strong></h3>
        <div>(全<%= @products1.count %>件)</div>
      </div>
      <div class="d-flex flex-wrap">
        <% @products.each do |product| %>
        <div style="margin-right: 10px;">
          <%= link_to product_path(product) do %>
           <%= image_tag product.get_image, size: "150x150" %>
          <% end %>
          <p><strong><%= link_to product.name, product_path(product) %></strong></p>
          <p><strong>¥<%= product.non_taced_price.to_i %></strong></p>
        </div>
        <% end %>
      </div>
      <div style="text-align: center;">
        <%= paginate @products %>
      </div>
    </div>
  </div>
</div>
