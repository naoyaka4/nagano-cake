<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table>
        <tr>
          <th>ジャンル検索</th>
        </tr>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <div class="col-md-8 offset-md-1">
      <div class="d-flex flex-row">
        <div><%= image_tag 'no_image', size: "200x200" %></div>
        <div>
          <h3><strong><%= @product.name %></strong></h3>
          <%= @product.explanation %>
          <p><strong><%= (@product.non_taced_price*1.1).floor %></strong>(税込)</p>
          <div class="d-flex flex-row">
            <%= form_with model: @cart_product, url: cart_products_path, method: :post, local: true do |f| %>
              <%= f.select :amount, [['1個',1], ['2個',2], ['3個',3], ['4個',4], ['5個',5], ['6個',6], ['7個',7], ['8個',8], ['9個',9], ['10個',10]], include_blank: "個数選択" %>
              <%= f.hidden_field :product_id, value: @product.id %>
              <%= f.submit "カートに入れる",class: "btn btn-sm btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
