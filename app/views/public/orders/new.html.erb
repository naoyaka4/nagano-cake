<div class="container">
  <div class = "row">
      <h2>注文情報入力</h2>
      <%= form_with model: Order.new, url: orders_check_path, method: :post, local: true do |f| %>
       <div>
        <h4>支払方法</h4>
        <%#= f.radio_button :payment_method, "credit_card" %>
        <%#= f.label :payment_method, "クレジットカード" %>
        <%#= f.radio_button :payment_method, "transfer" %>
        <%#= f.label :payment_method, "銀行振込" %>
        <!--上下どっちかでやる-->

            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
    </div>
    <div>
         <h4>お届け先</h4>
    </div>
    <div>
      <%= f.radio_button :a, 0 %>
      <%= f.label :a_0, "ご自身の住所" %>
      <br>
      〒
    <tr>
      <td><%= @customer.post_code %></td>
      <td><%= @customer.address %></td><br>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    </div>
    <div>
      <%= f.radio_button :a, 1 %>
      <%= f.label :a_1, "登録済み住所から選択" %>
      <%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :address_display) %>
    </div>   
    <div>
      <%= f.radio_button :a, 2 %>
      <%= f.label :a_2, "新しいお届け先" %>
    </div>
    <%#= form_with model: @address, url: addresses_path, local: true do |f| %>
  <table>
    <tr>
      <td>郵便番号(ハイフンなし)</td>
      <td><%= f.text_field :post_code, autofocus: true, placeholder: "0000000" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "w-100" %></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name, placeholder: "令和道子" %></td>
      <td></td>
      <tr>
      <td><%= f.submit "登録画面へ進む", class: "btn btn-sm btn-success" %></td>
      </tr>
    </tr>
    
  </table>
<%# end %>
      <% end %>   
    
  </div>
</div>