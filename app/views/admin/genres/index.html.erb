<main>
<div class="container">
 <div class="row">
    <div class= "col-md-11 ">
      <h2>ジャンル一覧・追加</h2>
<table>
  <tbody>
        <%= form_with model:@genre,url: admin_genres_path, method: :post do |f| %>
  <div class="form-group">
    <%= f.label :ジャンル名 %>
    <%= f.text_field :name, class: 'name' %>
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
  
    <% end %>
    <thead>
    <tr>
      <th style="background-color:pink">ジャンル</th>
    </tr>
  </thead>
     <div class="container">
    <div class="row">
      <div class="col-3">
      <%= render 'index', genres: @genres %>
    </div>
   </div>
  </div>

  </tbody>
</table>
</main>


