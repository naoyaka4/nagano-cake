<div class="row">
	<h2>商品詳細</h2>

<!--ここにイメージ画像入れる-->
		<table class="table">
		  <tr>
				<th>画像</th>
				  <%= image_tag 'no_image', size: "200x200" %>
			</tr>
			<tr>
				<th>商品名</th>
				<th><%= @product.name %></th>
			</tr>
			<tr>
				<th>商品説明</th>
				<th><%= @product.explanation %></th>
			</tr>
			<tr>
				<th>ジャンル</th>
				<th><%= @product.genre.name %></th>
			</tr>
			<!--こっから下わからんちん-->
	    <tr>
				<th>税込価格（税抜価格）</th>
				<th><%= @product.add_tax_non_taced_price.to_s(:dalimited) %>円</th>
				<th>(<%= @product.non_taced_price %>円)</th>
			</tr>
			<tr>
				<th>販売ステータス</th>
				<th>
					<% if @product.is_active == true %>
						商品販売中
					<% else %>
						商品未販売
					<% end %>
				</th>
				<th>

			</tr>
		</table>
		<div>
		<%= link_to ' 編集する', edit_admin_product_path(@product), class: "btn btn-success" %>
	    </div>
	</div>
</div>