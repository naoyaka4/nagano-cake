<h2>注文履歴一覧</h2>

<table>
  <thead>
    <tr>
      <td>購入日時</td>
      <td>購入者</td>
      <td>注文個数</td>
      <td>注文ステータス</td>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td>
        <%= link_to order.created_at.strftime('%Y/%m/%d'), admin_order_path(order.id) %>
      </td>
      <td>
        <%= order.customer.last_name %><%= order.customer.first_name %>
      </td>
      <td>
        <%= order.order_details.sum(:amount) %>
      </td>
      <td>
        <%= order.status_i18n %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
