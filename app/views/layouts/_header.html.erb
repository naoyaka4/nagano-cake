<header>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: coral;">
    <div class="container">
      <a class="navbar-brand" href="/"><span>-NAGANO cake-</span></a>
      <%#= image_tag 'top.jpeg' %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <%= form_with url: root_path, local: true, method: :get do |f| %>
            <%= f.text_field :content, placeholder: "Search" %>
            <%= f.submit "検索", class: "btn btn-sm btn-secondary" %>
          <% end %>
        <% if customer_signed_in? %>
         <div class = "text-white">ようこそ、<%= current_customer.last_name %>さん!</div>
          <li>
            <%= link_to customers_my_page_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user"></i> マイページ
            <% end %>
          </li>
          <li>
            <%=  link_to products_path,class: 'nav-link text-light' do %>
              <i class="fas fa-birthday-cake"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%=  link_to cart_products_path,class: 'nav-link text-light' do %>
              <i class="fas fa-cart-arrow-down"></i> カート
            <% end %>
          </li>
          <li>
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
          <% elsif admin_signed_in? %>
            <li>
            <%= link_to admin_products_path,class: 'nav-link text-light' do %>
              <i class="fas fa-birthday-cake"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_customers_path,class: 'nav-link text-light' do %>
              <i class="fas fa-users"></i> 会員一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_root_path,class: 'nav-link text-light' do %>
              <i class="fas fa-file-alt"></i> 注文履歴一覧
            <% end %>
          </li>
          <li>
            <%=  link_to admin_genres_path,class: 'nav-link text-light' do %>
              <i class="fas fa-utensils"></i> ジャンル一覧
            <% end %>
          </li>
          <li>
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-out-alt"></i> ログアウト
            <% end %>
          </li>
        <% else %>
          <li>
            <%= link_to about_path,class: 'nav-link text-light' do %>
              <i class="fas fa-comment"></i> About
            <% end %>
          </li>
          <li>
            <%= link_to products_path,class: 'nav-link text-light' do %>
              <i class="fas fa-birthday-cake"></i> 商品一覧
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_registration_path,class: 'nav-link text-light' do %>
              <i class="fas fa-user-plus"></i> 新規登録
            <% end %>
          </li>
          <li>
            <%= link_to new_customer_session_path ,class: 'nav-link text-light' do %>
              <i class="fas fa-sign-in-alt"></i> ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>